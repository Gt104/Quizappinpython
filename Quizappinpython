import json
import os

FILE_NAME = "quiz_questions.json"

# Load questions
def load_questions():
    if os.path.exists(FILE_NAME):
        with open(FILE_NAME, "r") as f:
            return json.load(f)
    return []

# Save questions
def save_questions(questions):
    with open(FILE_NAME, "w") as f:
        json.dump(questions, f, indent=4)

# Play quiz
def play_quiz(questions):
    if not questions:
        print("No questions available. Please add questions first.\n")
        return
    score = 0
    for q in questions:
        print("\n" + q["question"])
        for i, option in enumerate(q["options"], start=1):
            print(f"{i}. {option}")
        try:
            ans = int(input("Your answer (number): "))
            if 1 <= ans <= len(q["options"]) and q["options"][ans-1].lower() == q["answer"].lower():
                print("Correct!")
                score += 1
            else:
                print(f"Wrong! Correct answer: {q['answer']}")
        except ValueError:
            print(f"Invalid input! Correct answer: {q['answer']}")
    print(f"\nQuiz finished! Your score: {score}/{len(questions)}\n")

# Add question
def add_question(questions):
    question = input("Enter question: ").strip()
    options = [input(f"Option {i+1}: ").strip() for i in range(4)]
    answer = input("Enter correct answer (exact text from options): ").strip()
    questions.append({"question": question, "options": options, "answer": answer})
    save_questions(questions)
    print("Question added!\n")

# Main menu
def main():
    questions = load_questions()
    while True:
        print("=== QUIZ APP ===")
        print("1. Play Quiz")
        print("2. Add Question")
        print("3. Exit")
        choice = input("Choose option: ")
        if choice == "1":
            play_quiz(questions)
        elif choice == "2":
            add_question(questions)
        elif choice == "3":
            print("Goodbye!")
            break
        else:
            print("Invalid option.\n")

if __name__ == "__main__":
    main()
