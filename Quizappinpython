# Main menu
def main():
    questions = load_questions()
    while True:
        print("=== QUIZ APP ===")
        print("1. Play Quiz")
        print("2. Add Question")
        print("3. Exit")

        choice = input("Choose option: ").strip()
        if choice == "1":
            play_quiz(questions)
        elif choice == "2":
            add_question(questions)
        elif choice == "3":
            print("üëã Goodbye!")
            break
        else:
            print("‚ö†Ô∏è Invalid option. Please try again.\n")



if __name__ == "__main__":
    main()
